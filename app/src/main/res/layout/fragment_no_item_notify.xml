<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray91"
    tools:context=".no_item_notify">

    <ImageView
        android:id="@+id/go_back"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:src="@drawable/back"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="5dp"
        android:elevation="25dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:padding="4dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="There is no item in this category."
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:padding="4dp"
                android:textStyle="bold"
                android:text="Register and sell, it's free or"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:padding="4dp"
                android:textStyle="bold"
                android:text="Subscribe to be notified if items with this category added"
                />

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:padding="10dp"
               android:layout_gravity="center"
               >
               <Button
                   android:id="@+id/register_no_item_page"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="9dp"
                   android:padding="10dp"
                   android:textAllCaps="false"
                   android:text="Register"
                   android:layout_gravity="center"/>

               <Button
                   android:id="@+id/subscribe_for_item"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="9dp"
                   android:layout_marginStart="10dp"
                   android:padding="10dp"
                   android:textAllCaps="false"
                   android:text="Subscribe"
                   android:layout_gravity="center"/>

           </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>